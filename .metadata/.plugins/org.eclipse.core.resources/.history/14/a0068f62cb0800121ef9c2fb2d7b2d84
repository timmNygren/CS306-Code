import java.io.*;
import java.util.*;


import javax.swing.JFileChooser;


public class ScoreTrakker {
	
	private ArrayList<Student> students;
	private String studentName, number;
	
	
	public ScoreTrakker() {
		super();
		students = new ArrayList<Student>();
	}
	
	public void loadFromFile(String fileName) {
		//File not found try/catch
		try {
			FileReader reader = new FileReader(fileName);
			Scanner in = new Scanner(reader);
			while (in.hasNextLine()) {
			  studentName= in.nextLine();
			  
			  if (studentName.indexOf(" ") == -1) {
				  throw new FullNameException(studentName);
			  }
			  
			  number = in.nextLine();
			  int score = Integer.parseInt(number);
			  			  
			  students.add(new Student(studentName, score));
			}
			
			in.close();
			
		} catch (FileNotFoundException e) {
			System.out.println("Can't open file: " + studentName);
		} catch (NumberFormatException e) {
			System.out.println("Incorrect format, not a valid score: " + number);
		} catch (FullNameException e) {
			System.out.println(e);
		}		
	}
	
	public void printInOrder() {
		Collections.sort(students);
		for (int i = 0; i < students.size(); ++i) {
			System.out.println(students.get(i));
		}
	}


	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ScoreTrakker scoreTrakker = new ScoreTrakker();
		scoreTrakker.loadFromFile("scores.txt");
		scoreTrakker.printInOrder();
		System.out.println();
		scoreTrakker.loadFromFile("badscore.txt");
		scoreTrakker.loadFromFile("badname.txt");
		scoreTrakker.loadFromFile("something.txt");

	}

}
